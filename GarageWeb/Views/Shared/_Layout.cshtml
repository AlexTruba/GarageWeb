<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <header>
       <div class="logo">
           <img src="Images/logo.png" alt="Garage bar" />
           <div class="big-logo">G<span class="another-color">a</span>rage</div>
           <div class="small-logo">on web</div>
       </div>
       <div class="social">
           <div class="icon">
               <a href="#"><img src="Images/twitter.png" alt="Alternate Text" /></a>
               <a href="#"><img src="Images/facebook.png" alt="Alternate Text" /></a>               
               <a href="#"><img src="Images/gmail.png" alt="Alternate Text" /></a>
           </div>
       </div>
   </header>
    <ul class="menu"> 
        <li><a href="#">Головна</a></li>
        <li><a href="#">МЕНЮ</a></li>
        <li><a href="#">Новини</a></li>
    </ul>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
