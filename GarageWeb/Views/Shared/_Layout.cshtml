@using Microsoft.Owin.Security;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <header>
       <div class="logo">
           <img src="~/Images/logo.png" alt="Garage bar" />
           <div class="big-logo">G<span class="another-color">a</span>rage</div>
           <div class="small-logo">on web</div>
       </div>
       <div class="social">
           @if (HttpContext.Current.User.Identity.IsAuthenticated)
           {
               <div class="login">
                   Ви авторизовані як <span class="user-name">@HttpContext.Current.User.Identity.Name</span>
               </div>
               <div class="logout">
                   @Html.ActionLink("Вийти", "LogOut", "Admin")
               </div>
           }
           else
           {
            
                var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
                using (Html.BeginForm("ExternalLogin", "User", new { ReturnUrl = HttpContext.Current.Request.Url.AbsolutePath}))
                {
                @Html.AntiForgeryToken()
                <div class="icon">
                    <div id="socialLoginList">
                        <p>
                            @foreach (AuthenticationDescription p in loginProviders)
                            {
                                <button type="submit" class="btn btn-default" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account">@p.AuthenticationType</button>
                            }
                        </p>
                    </div>

                    @*<a href="#" name="provider" value="Facebook"><img src="~/Images/facebook.png" alt="Alternate Text" /></a>
                        <a href="#" name="provider" value="Vk"><img src="~/Images/vk.png" alt="Alternate Text" /></a>
                        <a href="#" name="provider" value="Google"><img src="~/Images/google.png" alt="Google" /></a>*@

                </div>
               }


           }
       </div>
   </header>
    <ul class="menu"> 
        <li>@Html.ActionLink("Головна", "Index", "Home")</li>
        <li><a href="#">МЕНЮ</a></li>
        <li><a href="#">Новини</a></li>
    </ul>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Serdiuk & Truba Production</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
